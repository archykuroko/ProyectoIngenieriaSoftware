@model ProyectoISNuevo.Models.Usuario

@{
    ViewData["Title"] = "Editar Perfil";
}

<div class="container mt-4">
    <h2>✏️ Editar Perfil</h2>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label>Nombre:</label>
            <input asp-for="Nombre" class="form-control" required />
        </div>
        <div class="mb-3">
            <label>Apellido Paterno:</label>
            <input asp-for="ApellidoPaterno" class="form-control" required />
        </div>
        <div class="mb-3">
            <label>Apellido Materno:</label>
            <input asp-for="ApellidoMaterno" class="form-control" required />
        </div>
        <div class="mb-3">
            <label>Género:</label>
            <select asp-for="Genero" asp-items="@(new SelectList(ViewBag.Generos, "IdGenero", "Nombre"))" class="form-control"></select>
        </div>
        <div class="mb-3">
            <label>Imagen de Perfil:</label>
            <input type="file" name="nuevaImagen" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        <a href="@Url.Action("Index", "Profile")" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
