@model ProyectoISNuevo.Models.Usuario

@{
    ViewData["Title"] = "Mi Perfil";
}

<div class="container mt-4 text-center">
    <h2>👤 Mi Perfil</h2>

    <div class="card mx-auto mt-4" style="max-width: 400px;">
        <div class="card-body text-center">
            <img src="@Model.Image" class="img-fluid rounded-circle mb-3" alt="Foto de Perfil" style="width: 150px; height: 150px;">
            <h4>@Model.Nombre @Model.ApellidoPaterno @Model.ApellidoMaterno</h4>
            <p><strong>Usuario:</strong> @Model.Usuario1</p>
            <p><strong>Correo:</strong> @Model.Correo</p>
            <p><strong>Género:</strong> @(Model.Genero == 1 ? "Masculino" : Model.Genero == 2 ? "Femenino" : "No seleccionado")</p>
            <p><strong>Rol:</strong> @Model.Rol?.Nombre</p>

            <a href="@Url.Action("Edit", "Profile")" class="btn btn-primary">✏️ Editar Perfil</a>
        </div>
    </div>
</div>
