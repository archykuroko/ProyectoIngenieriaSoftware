@model ProyectoISNuevo.Models.Cita

@{
    ViewData["Title"] = "Asignar Doctor";
}

<div class="container mt-5">
    <h2>🩺 Asignar Doctor a la Cita</h2>
    <p class="lead">
        Asigna un doctor a la cita de <strong>@Model.Usuario.Nombre @Model.Usuario.ApellidoPaterno</strong>.
    </p>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["Error"]</div>
    }

    <form method="post" action="@Url.Action("Asignar", "Cita", new { idCita = Model.IdCita })">
        <div class="mb-3">
            <label class="form-label"><strong>👨‍⚕️ Seleccionar Doctor:</strong></label>
            <select name="doctorId" class="form-control" required>
                <option value="">-- Seleccione un Doctor --</option>
                @foreach (var doctor in ViewBag.Doctores)
                {
                    <option value="@doctor.Value">@doctor.Text</option>
                }
            </select>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">✅ Asignar</button>
            <a href="@Url.Action("AsignarLista", "Cita")" class="btn btn-secondary">🔙 Volver</a>
        </div>
    </form>
</div>
