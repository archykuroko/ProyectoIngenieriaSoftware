@{
    Layout = "~/Views/Shared/_LayoutLanding.cshtml";
    ViewData["Title"] = "Registro de Usuario";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="form-blur">
        <h2 class="text-center">📝 Registro de Usuario</h2>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-danger">@ViewBag.Message</div>
        }

        <form asp-action="Register" method="post" class="mt-4">
            <div class="mb-3">
                <input type="text" name="Usuario1" class="form-control text-center" placeholder="Usuario" required />
            </div>
            <div class="mb-3">
                <input type="text" name="Nombre" class="form-control text-center" placeholder="Nombre" required />
            </div>
            <div class="mb-3">
                <input type="text" name="ApellidoPaterno" class="form-control text-center" placeholder="Apellido Paterno" required />
            </div>
            <div class="mb-3">
                <input type="text" name="ApellidoMaterno" class="form-control text-center" placeholder="Apellido Materno" required />
            </div>
            <div class="mb-3">
                <input type="email" name="Correo" class="form-control text-center" placeholder="Correo" required />
            </div>
            <div class="mb-3">
                <input type="password" name="Contraseña" class="form-control text-center" placeholder="Contraseña" required />
            </div>
            <button type="submit" class="btn btn-success w-100">Registrar</button>
            <p class="text-center">
                ¿Ya tiene cuenta?
                <a href="@Url.Action("Login", "Auth")" class="btn btn-link">Haga clic aquí para iniciar sesión</a>
            </p>
        </form>
    </div>
</div>
