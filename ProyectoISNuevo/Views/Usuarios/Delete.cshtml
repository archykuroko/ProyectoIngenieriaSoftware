@model ProyectoISNuevo.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="container mt-4">
    <h2>🗑 Eliminar Usuario</h2>
    <p class="text-danger">⚠️ ¿Seguro que deseas eliminar al usuario <strong>@Model.Nombre</strong>?</p>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Sí, eliminar</button>
        <a href="@Url.Action("Index", "Usuarios")" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
