@model ProyectoIS.Models.RegisterViewModel

@{
    ViewData["Title"] = "Registro";
    ViewData["BodyClass"] = "auth-background";
    Layout = null;
}

<link href="~/css/Styles.css" rel="stylesheet" />

<div class="wrapper">
    <h2 class="text-center">Registro</h2>

    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-info text-center">@ViewBag.Message</div>
    }

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <form asp-action="Register" method="post">
        @Html.AntiForgeryToken()

        <div class="input-field">
            <input asp-for="Usuario" type="text" class="form-control" placeholder="Nombre de Usuario" required />
            <span class="text-danger" asp-validation-for="Usuario"></span>
        </div>

        <div class="input-field">
            <input asp-for="Nombre" type="text" class="form-control" placeholder="Nombre(s)" required />
            <span class="text-danger" asp-validation-for="Nombre"></span>
        </div>

        <div class="input-field">
            <input asp-for="ApellidoPaterno" type="text" class="form-control" placeholder="Apellido Paterno" required />
            <span class="text-danger" asp-validation-for="ApellidoPaterno"></span>
        </div>

        <div class="input-field">
            <input asp-for="ApellidoMaterno" type="text" class="form-control" placeholder="Apellido Materno" required />
            <span class="text-danger" asp-validation-for="ApellidoMaterno"></span>
        </div>

        <div class="input-field">
            <input asp-for="Correo" type="email" class="form-control" placeholder="Correo Electrónico" required />
            <span class="text-danger" asp-validation-for="Correo"></span>
        </div>

        <div class="input-field">
            <input asp-for="Contraseña" type="password" class="form-control" placeholder="Contraseña" required />
            <span class="text-danger" asp-validation-for="Contraseña"></span>
        </div>


        <br>
        <button type="submit" class="btn btn-primary w-100">Registrarse</button>

        <div class="register text-center mt-3">
            <p>¿Ya tienes cuenta? <a href="@Url.Action("Login", "Auth")">Inicia sesión aquí</a></p>
        </div>
    </form>
</div>
